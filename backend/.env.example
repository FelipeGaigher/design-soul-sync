# Aplicação
NODE_ENV=development
PORT=3000
API_PREFIX=api
CORS_ORIGINS=http://localhost:8080,http://localhost:5173

# Banco de Dados PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/tokensync?schema=public"

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# JWT - Autenticação
# IMPORTANTE: Gere secrets fortes para produção!
# Use: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your-super-secret-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-refresh-secret-key-change-in-production
JWT_REFRESH_EXPIRES_IN=7d

# Figma Integration
# Personal Access Token - Gere em: https://www.figma.com/developers/api#access-tokens
FIGMA_ACCESS_TOKEN=figd_your-personal-access-token-here

# Figma OAuth (Opcional - não necessário com Personal Token)
FIGMA_CLIENT_ID=your-figma-client-id
FIGMA_CLIENT_SECRET=your-figma-client-secret
FIGMA_REDIRECT_URI=http://localhost:3000/api/auth/figma/callback

# Google OAuth (opcional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback

# OpenAI - Para AI Assistant e Benchmark
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_VISION_MODEL=gpt-4-vision-preview

# Storage (S3 ou MinIO)
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET=tokensync
S3_REGION=us-east-1

# Rate Limiting
RATE_LIMIT_TTL=60
RATE_LIMIT_LIMIT=100

# Logs
LOG_LEVEL=debug

# Swagger (documentação da API)
SWAGGER_ENABLED=true
SWAGGER_TITLE=TokenSync API
SWAGGER_DESCRIPTION=API para sincronização de Design Systems
SWAGGER_VERSION=1.0
